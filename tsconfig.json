{
	"compilerOptions": {
		"outDir": "dist",

		"module": "commonjs",
		"moduleResolution": "node",

		"target": "es6",
		"lib": ["es6"],

		"declaration": true,
		"declarationMap": false,
		"sourceMap": true,

		"downlevelIteration": true,
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,

		"importsNotUsedAsValues": "remove",

		"skipLibCheck": true,
		"stripInternal": true,
		"removeComments": false,

		"newLine": "lf"
	},
	"include": [
        "src/**/*.ts"
    ]
}
